{
	"name": "copy_to_staging",
	"properties": {
		"activities": [
			{
				"name": "convert_to_paraquet",
				"type": "Copy",
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"typeProperties": {
					"source": {
						"type": "BlobSource",
						"recursive": true
					},
					"sink": {
						"type": "AzureDataLakeStoreSink",
						"copyBehavior": "MergeFiles"
					},
					"enableStaging": false,
					"dataIntegrationUnits": 0
				},
				"inputs": [
					{
						"referenceName": "incoming_data",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "staging",
						"type": "DatasetReference"
					}
				]
			}
		]
	}
}